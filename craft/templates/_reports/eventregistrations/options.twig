{% import "_includes/forms" as forms %}
{% set events = craft.venti.events.registeredEvent(1) %}
{% set optionValues = {} %}
{% for event in events %}
  {#% set optionValues = optionValues|merge({(event.elementId): event.title}) %#}
  {% set optionValues = optionValues|merge([{ label: event.title, value: event.elementId }]) %}
{% endfor %}

{{ forms.selectField({
    label: "Event"|t,
    name: "options[event]",
    options: optionValues,
    value: options.event is defined ? options.event : NULL
}) }}
