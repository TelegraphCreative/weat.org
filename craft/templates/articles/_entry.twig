{% extends "_layouts/standard" %}

{% set Builder = entry.articleContentBuilder %}

{% block content %}
{# Breadcrumbs #}
{% include '_components/nav--breadcrumbs' %}

{# Container #}
<div class="simple-container">

	<div class="lg:flex lg:flex-wrap mb-lg md:-mx-4">

		{# Main #}
		<section class="main-content lg:w-2/3 md:px-4">

			{# Header #}
			<header class="article-detail__header   mb-16 mt-12">
				<a class="no-underline hover:text-green" href="#">
					<h4 class="text-2md sm:text-xl">{{entry.pageTitle}}</h4>
				</a>
			</header>
			{# Content Builder #}
			{% for block in Builder %}
				{% switch block.type %}

					{# Standard Slider #}
					{% case "standardSlider" %}
						{% include '_components/slider--standard' with {classes: 'm-auto md:w-3/5 w-full     sm:pt-10 pt-9 mb-14'} %}


					{# Article #}
					{% case "article" %}
						{% include '_components/article' with {classes: 'article-detail__article article mb-16'} %}

					{# Callout #}
					{% case "callout" %}
						<h2 class="leading-normal mb-4 mt-16 text-blue text-lg">Keep Exploring</h2>
						<p class="leading-normal mb-6 text-grey-dark text-md">To learn more about this topic, visit our parent organizationâ€™s website.</p>
						<a class="btn   mb-16" href="">Visit WEF</a>

					{% default %}

				{% endswitch %}

			{% endfor %}

			{% if entry.description %}
			{# Citations #}
			<div class="border-t border-grey-lightest leading-tight pt-4 text-grey-dark text-xs">
				<h5 class="leading-loose mb-1 text-xs">Citations</h5>
				<p class="">{{entry.description}}</p>
			</div>
			{% endif %}

		</section>


		{# Aside : Article Info #}
		<aside class="aside-content w-full lg:w-1/3 mt-14 lg:mt-xl md:px-4 lg:pt-6 clearfix ">

			{# Info #}
			<div class="aside__info   border-t border-grey-lightest max-w-sm lg:max-w-xs w-full m-auto lg:float-right pt-6 text-xs text-grey-dark">

				{%if entry.author.photoUrl(64)%}
				<div class="img --1by1   mb-4 w-16">
					<img src="{{entry.author.photoUrl(64)}}" class="rounded-full">
				</div>
				{%endif%}

				<h6 class="text-md mb-4">{{entry.author.name}}</h6>

				<time  class="leading-normal block">
					{{entry.postDate|date("F j, Y")}}
				</time>

				{# Article Categories #}
				<ul class="aside__category-tags   leading-normal list-reset mb-6 inline-block">
					<li class="inline">
						<a class="no-underline text-blue-light hover:text-blue" href="">Category</a>
					</li>
					<li class="inline">
						<a class="no-underline text-blue-light hover:text-blue" href="">Another Category</a>
					</li>
				</ul>

			</div>

		</aside>

	</div>

</div>


{% endblock %}
