{# Stat List #}
<div class="stat-list list--stats border-list   m-auto max-w-2xl flex flex-wrap flex-justify px-4 md:mt-12 py-10">

	{% for block in block.children %}
		
		<div class="stat__group border__item   {% if loop.index == '3' %}w-full{% else %}w-1/2{% endif %}  block text-center border-grey-lightest md:border-r max-w-xs m-auto mb-10 md:w-1/3 md:mb-0">

			<span class="text-2xl sm:text-4xl block text-blue .mb-6">{{block.figure}}</span>

			<span class="text-2md text-blue-light">{{block.subheading}}</span>

		</div>
	
	{% endfor %}

</div>
