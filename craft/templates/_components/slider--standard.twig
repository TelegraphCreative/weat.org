{# Standard Slider #}
{% set block = block.simpleSlider %}

{% if block.total() > 1 %}

<div class="slider slider--standard   {{classes}}" data-module="slider">
	
  <ul class="js-slider list-reset" >
  	
  	{% for asset in block %}

	    <li class="js_slide">
	      <div class="img">
	        {{image.single_simple(asset,'')}}	
	      </div>
	    </li>

    {% endfor %}
    
  </ul>

</div>

{% else %}
  	<figure class="img is16by9 bg-grey-lightest md:mb-4">
      {{image.single_simple(block.image[0],'absolute pin-t pin-l')}}  
    </figure>
{% endif %}