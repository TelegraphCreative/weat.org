{# Featured Hero #}
<div class="hero--feature clearfix pb-8 sm:pb-12">
	<article class="h-full md:float-left bg-blue-dark text-blue-light px-6 pt-12 pb-16 sm:px-8 md:pt-16 md:pb-20 w-full lg:w-1/2 ">
		<div class="mr-auto ml-auto md:w-5/6 w-full">
			<header class="mb-14">
				<h6 class="uppercase text-1xs mb-10 tracking-wide">
					{{block.tagline}}
				</h6>

				<h3 class="text-white text-lg md:text-xl">
					{{block.header}}
				</h3>
			</header>

			<div class="content text-base md:text-md leading-normal mb-12">

				{{block.body}}

			</div>

			{{link.simple(block.button, 'btn')}}
			
		</div>
	</article>

	<div class="w-full md:float-left lg:w-1/2 md:bg-grey-lightest lg:mt-lg">

		{{image.single_simple(block.singleImage[0],'block sm:pr-8 md:pr-10 w-full h-auto')}}	

	</div>
</div>