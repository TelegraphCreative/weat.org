{# Portrait List #}
<div class="list--portraits   m-auto max-w-2xl    px-4  mb-xl   pt-10 sm:mb-10 ">
	<div class="sm:flex sm:flex-wrap sm:justify-between ">
	
	{% for block in block.children %}

		<div class="portrait__group   w-full block text-center max-w-xs m-auto mb-18 md:w-1/3 md:w-1/3 md:mb-0 sm:px-2">

			{% if block.singleImage|length %}
				<div class="img --1by1 mb-6 w-2/3 sm:w-4/5 m-auto">
					{{image.single_simple(block.singleImage[0],'rounded-full')}}	
				</div>
			{% endif %}

			<h4 class="text-blue text-2md mb-3">{{block.header}}</h4>

			{% if block.role|length %}
				<h6 class="text-blue-light text-base sm:text-md mb-2 md:mb-4">{{block.role}}</h6>
			{% endif %}

			<div class="text-base text-grey-dark m-auto w-full leading-normal">
				{% if block.phone|length %}
					<a href="tel:{{block.phone}}" class="mb-3 no-underline text-grey-dark hover:text-blue">{{block.phone}}</a>
				{% endif %}


				{% if block.phone|length %}
					<a href="mailto:{{block.email}}" class="mb-3 no-underline text-grey-dark hover:text-blue">{{block.email}}</a>
				{% endif %}
				
			</div>
		</div>

	{% endfor %}
	</div>
</div>
