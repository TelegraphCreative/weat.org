{# Event Card Content #}

<div class="card w-full sm:w-1/2 lg:w-1/3 px-4 mb-10 sm:mb-16 lg:mb-4 flex flex-col justify-between">

	<div class="content">
		<figure class="img is16by9 bg-grey-lightest mb-4">
		  {{image.single_simple(entry.singleImage[0],'absolute pin-t pin-l')}}  
		</figure>

		<h2 class="text-2md mb-4 text-blue">
			<a class="text-blue hover:text-green no-underline" href="#">{{entry.title}}</a>
		</h2>
		<time class="block text-2xs tracking-wide uppercase mb-3 text-blue-light">{{entry.startDate|date('F d, Y')}}</time>

		<div class="text-base text-grey-dark leading-normal mb-8">
			{% if loop.index == 2 %}
			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugiat delectus quas iure deleniti dolores qui dignissimos.</p>
			{% else %}
				<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Veritatis qui consequuntur aperiam recusandae autem, eaque alias cumque explicabo maxime, blanditiis, error suscipit similique.</p>
			{% endif %}
			
		</div>
	</div>

	<div>
		<a href="#" class="btn  --auto-w">Register</a>
	</div>

</div>