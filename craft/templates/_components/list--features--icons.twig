{# Feature List #}

<div class="features-list list--features  m-auto container px-4 {{Class}}"> 
	<div class="md:flex md:flex-wrap md:justify-center ">
		{% for block in Content %}

			{% set Image = block.singleImage %}
			{% set Header = block.header %}
			{% set Text = block.body %}
			{% set Button = block.button %}

			<div class="feature__group   w-full block text-center max-w-xs m-auto mb-14 md:w-1/3 md:w-1/3 md:mb-0 sm:px-2">
				
				
				
					<div class="m-auto mb-6 w-16">
						<div class="img is1by1 relative">
							{% if loop.index == 1 %}
									<img src="/assets/svg/icon--educate.svg" class="absolute pin-t pin-l w-full h-full">
								{% elseif loop.index == 2 %}
									<img src="/assets/svg/icon--engage.svg" class="absolute pin-t pin-l w-full h-full">
								{% elseif loop.index == 3 %}
									<img src="/assets/svg/icon--advocate.svg" class="absolute pin-t pin-l w-full h-full">
							{% endif %}
						</div>
					</div>	

				

				<h4 class="text-blue text-2md mb-6 sm:mb-3">{{Header}}</h4>
				
				<div class="text-xs text-grey-dark m-auto w-full leading-normal">
					{{Text}}
				</div>

				{{link.icon(Button, 'mt-6 btn --text', 'arrow-right')}}
				
			</div>
			
		{% endfor %}
	</div>
</div>


