{# Event Card -- See All Filler Card #}
{% set entry = craft.entries.section('eventsLanding')[0] %}
{% set Header = entry.textBarebones %}
{% set Text = entry.textBarebones2 %}
{% set Button = 'See All Events' %}

<div class="card w-full sm:w-1/2 lg:w-1/3 px-4  mb-4 text-center ">
	<div class="border-grey-lightest border h-full flex flex-col items-center">
		<div class="sm:w-4/5 m-auto py-10">

			<h2 class="text-2md mb-4 text-blue">
				{{Header|raw}}
			</h2>

			<div class="text-base text-grey-dark leading-normal mb-12">
				{{Text|raw}}
			</div>

			<a href="/events" class="btn w-full --outline">{{Button}}</a>

		</div>
	</div>

</div>