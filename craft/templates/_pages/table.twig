{# Table #}
<div class="{{classes}}">

	{# Header #}
	
	
	{# Data #}
	<table>
		{% if Title %}
			<caption class="text-center text-center text-blue text-2md mb-8 sm:text-lg sm:mb-12">
				{{Title}}
			</caption>
		{% endif %}
		
	  <thead class="bg-blue-dark text-white text-2md">
	    <tr>
	    {% for col in Table.columns %}
	      <th class="p-6" align="{{ col.align }}" class="" width="{{ col.width }}">{{ col.heading }}</th>
	    {% endfor %}
	    </tr>
	  </thead>
		
	  <tbody>
	    {% for row in Table.rows %}
	    <tr>
	    {% for cell in row %}
	      <td data-label="{{Table.columns[loop.index-1].heading}}" align="{{ Table.columns[loop.index0].align }}">{{ cell|raw }}</td>
	    {% endfor %}
	    </tr>
	  {% endfor %}
	  </tbody>

	</table>
</div>