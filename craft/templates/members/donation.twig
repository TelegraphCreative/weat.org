{% extends "_layouts/standard" %}

{% block content %}

<section class="landing mb-lg">
  <div class="article    m-auto md:w-3/5 w-full    md:px-0 px-6  sm:pt-10 sm:mb-10">
    <form class="form-horizontal"
          id="charge-form"
          method="post"
          action=""
          accept-charset="UTF-8"
          data-publicKey="{{ craft.charge.getPublicKey }}">
        {{ forms.hidden({ name : 'action', value: 'charge/charge' }) }}
        {{ forms.hidden({ name : 'redirect', value: 'charge/thanks?hash={hash}' }) }}
        {{ getCsrfInput() }}

        {% set options = { 'allowDynamic' : true } %}
        {{ craft.charge.setPaymentOptions(options) }}

        {% if allErrors is defined %}
            {{ forms.errorBlock(allErrors) }}
        {% endif %}

        <div id="payment-errors" class="alert alert-error"></div>

        <h4>Customer Details</h4>
        {% include '_components/charge--customer-details' %}

        <h4>Plan Details</h4>
        {{ stripe.amountField({
            label: 'Amount',
            name: 'planAmount',
            id: 'planAmount',
            placeholder: 'eg. 49.99',
            value: (charge is defined ? charge.planAmount ),
            errors: (charge is defined ? charge.getErrors('planAmount'))
        }) }}

        {{ forms.radioGroupField({
            label: 'Plan Interval',
            name: 'planInterval',
            id: 'planInterval',
            options: {
                '' : 'One-Off',
                'day' : 'Daily',
                'week' : 'Weekly',
                'month' : 'Monthly',
                'year' : 'Yearly'
            },
            value: (charge is defined ? charge.planInterval),
            errors: (charge is defined ? charge.getErrors('planInterval'))
        }) }}

        {{ forms.radioGroupField({
            label: 'Plan Interval Count',
            name: 'planIntervalCount',
            id: 'planIntervalCount',
            options: {
                '0' : 'Not recurring',
                '1' : 'Every Period',
                '3' : 'Every 3 Periods',
                '12' : 'Every 12 Periods'
            },
            value: (charge is defined ? charge.planIntervalCount),
            errors: (charge is defined ? charge.getErrors('planIntervalCount'))
        }) }}


        <h4>Card Details</h4>
        {% include '_components/charge--card-details' %}
        {% include '_components/charge--payment-button' %}
    </form>
  </div>
</section>

{% endblock %}
