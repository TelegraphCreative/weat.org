{% extends '_components/checkout--singlepage.twig' %}

{% if currentUser and currentUser.isInGroup('subscriber') %}
	{% redirect "members/edit/account?loggedIn=true&isMember=true" %}
{% endif %}

{% set subscribtionNotification = true %}
{% set pageHeader = 'Join WEAT' %}
{% set itemLabel = 'Annual WEAT Membership' %}
{% set quantity = 1 %}
{% set individualPrice = 50.00 %}
{% set totalPrice = individualPrice * quantity %}
{% set createAccount = 'yes' %}
{% set options = {
		'planAmount' : totalPrice,
		'planName' : 'WEAT Annual Membership',
		'description' : itemLabel,
		'planInterval' : 'year',
		'planIntervalCount' : '1',
		'planAmount' : 50.00,
		'actions' : {
			'onSuccess': {
				'subscription' : 'weat'
			},
		}
	}
%}

{% block meta %}
{{ forms.hidden({ name : 'meta[type]', value: 'join' }) }}
{% endblock %}
