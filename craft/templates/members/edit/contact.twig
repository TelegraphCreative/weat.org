{% extends "_layouts/standard" %}

{% block content %}

{# Breadcrumbs #}
{% include '_components/fed/nav--breadcrumbs'  %}

{# Container #}
<div class="simple-container">
	
	{# Logged In Menu #}
	{% include '_components/fed/nav--logged-in' %}

	{# Form #}
	<section class="form-container --narrow m-auto md:w-3/4 lg:w-1/2 mb-12 sm:mb-lg choices-as-boxes">
		
		<form action="#" class="py-4">
			
			{# Field #}
			<div class="form-row mb-6">
				<label for="phone" class="field-label block w-full">Phone</label>
				<input required name="phone" id="phone" type="number" class="input-field --phone-number block w-full" placeholder="Your Name">
			</div>

			{# Field #}
			<div class="form-row mb-6">
				<label for="company" class="field-label block w-full">Company</label>
				<input required name="company" id="company" type="password" class="input-field block w-full">
			</div>

			{# Field #}
			<div class="form-row mb-6">
				<label for="title" class="field-label block w-full">Title</label>
				<input name="title" id="title" type="password" class="input-field block w-full">
			</div>

			{# Field #}
			<div class="form-row mb-6">
				<label for="streetAddress" class="field-label block w-full">Street Address</label>
				<input required name="streetAddress" id="streetAddress" type="password" class="input-field block w-full">
			</div>

			{# Field #}
			<div class="form-row mb-6">
				<label for="city" class="field-label block w-full">City</label>
				<input required name="city" id="city" type="password" class="input-field block w-full">
			</div>


			{# Field / split #}
			<div class="form-row mb-6 flex justify-center items-center -mx-4">

				<div class="w-1/2 px-4">
					<label for="state" class="field-label block w-full">State</label>
					<select name="state" id="state" data-module="choices">
						<option value="CT">CT</option>
						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>
				</div>

				<div class="w-1/2 px-4">
					<label for="country" class="field-label block w-full">Year</label>
					<select required name="country" id="country" data-module="choices" class="choices--box">
						<option value="U.S.A">U.S.A</option>
						<option value="France">France</option>
						<option value="Germany">Germany</option>
						<option value="Japan">Japan</option>
					</select>
				</div>				
			</div>

			{# Buttons #}
			<div class="form-row mb-6 pt-6 flex items-center">
					 <input class="submit btn" type="submit" value="Update">
					<a href="#" class="ml-6 px-3 text-sm no-underline text-grey-dark hover:text-green block">Cancel</a>
			</div>



		</form>

	</section>

</div>

{# Form Validation #}
{% set formJs %}
	$("form").validate();
{% endset %}

{% includeJsFile '/assets/static/validate/jquery.validate.min.js' %}
{% includeJs formJs %}



{% endblock %}
