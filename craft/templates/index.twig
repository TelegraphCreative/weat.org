{% extends "_layouts/standard" %}

{% block content %}

	{# Hero #}
	{% include '_components/headers' with {
		type: 'page-header--hero',
		Title: entry.pageTitle,
		Image: entry.singleImage[0],
		Button: entry.button,
		} 
	%}


	{# Events â€¦ == #}
	{% include '_components/cards--events' with {
		Content: entry.featuredEvents
	}
	%}


	{# CTA Hero #}
	{% include '_components/hero--cta' with {
		Spacing: false,
		Header: entry.header,
		Text: entry.textBarebones,
		Button: entry.button2,
		Class: 'border-6 border-white',
		WrapClass: 'md:pt-10'
		} 
	%}

	{# About #}
	{% include '_components/headers' with {
			type: 'section-header--hero', 
			class: ' md:mt-20 mt-10 mb-12',
			Header: entry.sectionTitle,
			Text: entry.textBarebones2
		} 
	%}
	
	{% include '_components/list--features' with {
			Content: entry.listFeature,
			Class: "mb-18 md:mb-xl md:pt-12 sm:pb-8 pt-8"
		}
	%}


	{# Story #}
	{% include '_components/hero--feature--quote' with { 
			class: 'lg:mb-18', 
			Tagline: entry.tagline, 
			Quote: entry.caption, 
			Cite: entry.subheading, 
			Image: entry.singleImage2[0] 
		} 
	%}
	

{% endblock %}
