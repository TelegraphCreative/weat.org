	{# <section class="group mb-lg">
		
			<h2 class="md:text-2xl md:pt-10 md:mb-14 mt-12 mb-10 text-center sm:text-lg text-2md text-blue">Headers</h2>
			
			{% set Title = 'Title of Page' %}
			{% include '_components/headers' with {'type': 'page-header--standard'} %}
			
	</section> #}



	{# Group #}
	<section class="group mb-lg">
		
			<h2 class="md:text-2xl md:pt-10 md:mb-14 mt-12 mb-10 text-center sm:text-lg text-2md text-blue">Articles</h2>

