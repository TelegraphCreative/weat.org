						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>
					
				</div>
			
			</div>

			<div class="pt-8 flex flex-wrap -mx-4 choices-as-boxes">
				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<label for="state" class="field-label block w-full">Select Picker (plain)</label>
					<select name="state" id="state" data-module="choicesAsLinks">
						<option value="CT">CT</option>
						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>

					<p class="mt-4 text-sm text-grey-dark">Add <code>.choices-as-boxes</code> class to container div</p>
					
				</div>
			</div>

			
	</section>


