{% extends "_layouts/standard" %}

{% block content %}


{# Page Header #}
<header class="page-header bg-blue">
	<div class="md:max-w-2xl m-auto md:px-6 py-10 px-4">
		{# Landing Page Title: #}
		<h1 class="text-white font-medium md:text-3xl sm:text-xl text-lg">WEAT VSG</h1>
	</div>
</header>

<div class="m-auto md:w-3/5 w-full    sm:pt-10 sm:mb-10">
	
	{# Group #}
	<section class="group mb-lg">
		
			<h2 class="md:text-2xl md:pt-10 md:mb-14 mt-12 mb-10 text-center sm:text-lg text-2md text-blue">Buttons</h2>

			<div class="flex flex-wrap -mx-4 mb-12">

				{# Col #}
				<div class="w-1/2 mb-8 px-4">

					<a href="#" class="btn --full-w --outline-blue flex justify-center items-center">
						Fullwidth + Icon
						{{svg.icon('icon --md ml-2', 'attachment')}}
					</a>	

					
					<p class="font-bold text-1xs mt-6">Classes:</p>
					<code class="mt-4  block text-xs text-grey">btn --full-w --outline-blue flex justify-center items-center</code>
					
				</div>

				{# Col #}
				<div class="w-1/2 mb-8 px-4">

					<a href="#" class="btn --full-w --lg">Fullwidth + Large (Padding)</a>

					<p class="font-bold text-1xs mt-6">Classes:</p>
					<code class="mt-4  block text-xs text-grey">btn --full-w --lg</code>
					
				</div>
			</div>
			
			
			{# Group #}
			<div class="flex flex-wrap -mx-4 mb-12">

				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<a href="#" target="_blank" class="btn --text text-xs">Text Button</a>

					<p class="font-bold text-1xs mt-6">Classes:</p>
					<code class="mt-4  block text-xs text-grey">btn --text text-xs</code>
					
				</div>

				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<a href="#" class="btn --text --has-icon">
						Text Button w/ Icon
						{{svg.icon('icon --sm ml-1', 'arrow-right')}}
					</a>

					<p class="font-bold text-1xs mt-6">Classes:</p>
					<code class="mt-4  block text-xs text-grey">btn --text --has-icon</code>

				</div>

				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<a href="#" class="btn">
						Default Button
					</a>

					<p class="font-bold text-1xs mt-6">Classes:</p>
					<code class="mt-4  block text-xs text-grey">btn</code>

				</div>



				
			</div>
			
	</section>

	


	{# Group #}
	<section class="group mb-lg">
		
			<h2 class="md:text-2xl md:pt-10 md:mb-14 mt-12 mb-10 text-center sm:text-lg text-2md text-blue">Select Input</h2>

			<div class="flex flex-wrap -mx-4">

				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<label for="state" class="field-label block w-full">Select Picker (default)</label>
					<select name="state" id="state" data-module="choices">
						<option value="CT">CT</option>
						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>
					
				</div>

				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<label for="state" class="field-label block w-full">Select Picker (search)</label>
					<select name="state" id="state" data-module="choicesSearch">
						<option value="CT">CT</option>
						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>
					
				</div>

				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<label for="state" class="field-label block w-full">Select Picker (as links)</label>
					<select name="state" id="state" data-module="choicesAsLinks">
						<option value="CT">CT</option>
						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>
					
				</div>
			
			</div>

			<div class="pt-8 flex flex-wrap -mx-4 choices-as-boxes">
				{# Col #}
				<div class="w-1/3 mb-8 px-4">

					<label for="state" class="field-label block w-full">Select Picker (plain)</label>
					<select name="state" id="state" data-module="choicesAsLinks">
						<option value="CT">CT</option>
						<option value="AZ">AZ</option>
						<option value="NM">NM</option>
						<option value="TX">TX</option>
						<option value="CA">CA</option>
					</select>
					
					<p class="font-bold text-1xs mt-4">Notes:</p>
					<p class="mt-4 text-sm text-grey-dark">Add <code>.choices-as-boxes</code> class to container div</p>
					
				</div>
			</div>

			
	</section>



	{# Group #}
	<section class="group mb-lg">
		
			<h2 class="md:text-2xl md:pt-10 md:mb-14 mt-12 mb-10 text-center sm:text-lg text-2md text-blue">Checkboxes</h2>

			<div class="flex flex-wrap -mx-4 mb-12">


				<div class="mb-4">			

					{# Checkbox #}
					<label for="membershipAutoRenew" class="check-radio-input block w-full text-sm flex items-center">
						<input type="checkbox" id="membershipAutoRenew" class="check-radio__input">
						{{svg.icon('icon --md text-green', 'checkmark')}}
						<span class="check-radio__label inline-block ml-3  cursor-pointer">Checkbox Item #1</span>
					</label>

				</div>

				<div class="mb-4">			
					<p class="font-bold text-1xs my-6">Markup:</p>
					<div class="panel full-w bg-grey-lightest p-8 text-grey-dark">
						<code class="block text-xs text-grey">

								&lt;label for="membershipAutoRenew" class="check-radio-input block w-full text-sm flex items-center"&gt;
									<div class="pl-6">
										<br>
										&lt;input type="checkbox" id="membershipAutoRenew" class="check-radio__input"&gt;
										<br>
										<br>
										{% verbatim %}
										{{svg.icon('icon --md text-green', 'checkmark')}}
										{% endverbatim %}
										<br>
										<br>
										&lt;span class="check-radio__label inline-block ml-3  cursor-pointer"&gt;
											<div class="pl-8">
												Checkbox Item #1
											</div>
										&lt;/span&gt;
										<br>
										<br>
									</div>
								&lt;/label&gt;
							
						</code>
					</div>
				</div>


			</div>
			
	</section>

	{# Group #}
	<section class="group mb-lg">
		
			<h2 class="md:text-2xl md:pt-10 md:mb-14 mt-12 mb-10 text-center sm:text-lg text-2md text-blue">Macros</h2>
			<div class="text-center max-w-sm m-auto pb-6 ">There is a robust macros libary but most are built to work with data models from Craft (like macros for buttons and images); here's some simple ones that work well for static FED too:</div>
			
			<p class="font-bold text-1xs my-6">SVGs:</p>
			<div class="panel full-w bg-grey-lightest p-8 text-grey-dark">
				<code class="block text-xs text-grey">
					{% verbatim %}
						{{svg.icon('icon --md ml-2', 'attachment')}}
					{% endverbatim %}
				</code>
			</div>

		

			<p class="font-bold text-1xs my-6">Page Header:</p>
			<div class="panel full-w bg-grey-lightest p-8 text-grey-dark">
				<code class="block text-xs text-grey">
					{% verbatim %}
						{% set Title = 'Title of Page' %}
						<br>
						<br>
						{% include '_components/headers' with {'type': 'page-header--standard'} %}
					{% endverbatim %}
				</code>
			</div>

			<p class="font-bold text-1xs my-6">Output:</p>
			{% set Title = 'Title of Page' %}
			{% include '_components/headers' with {'type': 'page-header--standard'} %}
			
	</section>



