{% extends "_layouts/standard" %}

{% block content %}


{# Container #}
<div class="simple-container">
	
	{# Header #}
	<header class="text-center ml-auto mr-auto text-blue text-2md sm:text-xl mt-18 mb-14 sm:mt-xl sm:mb-18">
		<h2>Your Order</h2>
	</header>

	{# Form #}
	<section class="form-container --narrow m-auto w-full lg:w-3/5 mb-12 sm:mb-lg choices-as-boxes">
		
		<form action="#" class="py-4">
			

			{# Field / split #}
			<div class="form-row mb-6 px-4 lg:px-0 md:flex justify-center -mx-4">

				<div class="w-full md:w-3/5 ">
					<label for="item" class="field-label md:text-md block w-full pb-4 md:border-b md:pt-0 pt-4 md:border-t-0 border-t border-grey-lightest mb-4 px-4">Item</label>
					<div class="px-4 mb-4 md:w-4/5">
						<select name="item" id="item" data-module="choices" autocomplete="cc-exp">
							<option value="01">Texas Water! (Student Pass)</option>
							<option value="02">02</option>
							<option value="03">03</option>
							<option value="04">04</option>
						</select>
					</div>
				</div>

				<div class="w-full md:w-1/5" data-module="spinners">
					<label for="expMo" class="field-label md:text-md block w-full pb-4 md:border-b md:pt-0 pt-4 md:border-t-0 border-t border-grey-lightest mb-4 px-4">Qty</label>
					<div class="px-4 mb-4">
						<div class="spinner-group relative flex text-sm md:float-right">
								<div class="spinner__decr inline-block border-t border-b border-l py-3 px-2 cursor-pointer text-grey-light hover:text-grey tr-all-1">-</div>
								<input type="number" max="24" value="1" class="spinner border text-center w-10 bg-transparent py-3 pointer-events-none">
								<div class="spinner__incr inline-block border-t border-b border-r py-3 px-2 cursor-pointer text-grey-light hover:text-grey tr-all-1">+</div>
						</div>
					</div>
				</div>

				<div class="w-full  md:w-1/5">
					<label for="expMo" class="field-label md:text-md block w-full md:pb-4 md:border-b md:pt-0 pt-4 md:border-t-0 border-t border-grey-lightest mb-4 px-4">Amount</label>
					<span class="block text-left px-4 md:mt-6 sm:text-md text-base md:text-right md:w-1/2">$30</span>
				</div>

				
			</div>

			{# Field / split #}
			<div class="form-row mb-6 px-4  lg:px-0 flex md:justify-end md:-mx-4 md:border-t-0 border-t border-grey-lightest">

				<div class="w-auto  md:w-1/5">
					<span class="block text-left pr-4 md:px-4 pt-3 sm:pt-0 sm:mt-6 sm:text-md text-base md:text-right">Total:</span>
				</div>

				<div class="w-auto  md:w-1/5 ">
					<span class="block text-left md:px-4 pt-3 sm:pt-0 sm:mt-6 sm:text-md text-base">$60</span>
				</div>

				
			</div>



			{# Buttons #}
			<div class="form-row mb-6 pt-6 flex items-center ">
			 <div class="md:w-2/5">
			 	<input class="submit btn --full-w" type="submit" value="Continue to Checkout">
			 </div>
			</div>



		</form>

	</section>

</div>




{% endblock %}
