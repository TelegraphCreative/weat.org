{% extends "_layouts/standard" %}

{% block content %}

{# Breadcrumbs #}
{% include '_components/fed/nav--breadcrumbs'  %}

{# Container #}
<div class="simple-container">
	
	{# Logged In Menu #}
	{% include '_components/fed/nav--logged-in' %}

	{# Form #}
	<section class="form-container --narrow m-auto md:w-3/4 lg:w-1/2 mb-12 sm:mb-lg choices-as-boxes">
		
		<form action="#" class="py-4">
			
			{# Field #}
			<div class="form-row mb-6">
				<label for="cardName" class="field-label block w-full">Name on Card</label>
				<input required name="cardName" id="cardName" type="text" autocomplete="cc-name" class="input-field block w-full" placeholder="Your Name">
			</div>

			{# Field #}
			<div class="form-row mb-6">
				<label for="cardNum" class="field-label block w-full">Card #</label>
				<input required name="cardNum" id="cardNum" autocomplete="cc-number" class="input-field block w-full" data-module="fieldFormats">
			</div>


			{# Field / split #}
			<div class="form-row mb-6 sm:flex sm:justify-center sm:items-center -mx-4">

				<div class="w-full mb-4 sm:mb-0 sm:w-1/3 px-4">
					<label for="ccv" class="field-label block w-full">CCV</label>
					<input required name="ccv" id="ccv" autocomplete="cc-csc" class="input-field block w-full">
				</div>

				<div class="w-full mb-4 sm:mb-0 sm:w-1/3 px-4">
					<label for="expMo" class="field-label block w-full">Expiration Month</label>
					<select name="expMo" id="expMo" data-module="choices" autocomplete="cc-exp">
						<option value="01">01</option>
						<option value="02">02</option>
						<option value="03">03</option>
						<option value="04">04</option>
						<option value="04">04</option>
						<option value="05">05</option>
						<option value="06">06</option>
						<option value="07">07</option>
						<option value="08">08</option>
						<option value="09">09</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</select>
				</div>

				<div class="w-full mb-4 sm:mb-0 sm:w-1/3 px-4">
					<label for="expoYear" class="field-label block w-full">Year</label>
					<select required name="expoYear" id="expoYear" data-module="choices" class="choices--box">
						<option value="2017">2017</option>
						<option value="2018">2018</option>
						<option value="2019">2019</option>
						<option value="2020">2020</option>
						<option value="2021">2021</option>
						<option value="2022">2022</option>
						<option value="2023">2023</option>
						<option value="2024">2024</option>
						<option value="2025">2025</option>
					</select>
				</div>

				
			</div>



			{# Buttons #}
			<div class="form-row mb-6 pt-6 flex items-center">
					 <input class="submit btn" type="submit" value="Update">
					<a href="#" class="ml-6 px-3 text-sm no-underline text-grey-dark hover:text-green block">Cancel</a>
			</div>



		</form>

	</section>

</div>

{# Form Validation #}
{% set formJs %}
	// Checkout Validation:
	$("form").validate({
		rules: {
			cardNum: {
				creditcard: true,
				required: true
			},
			ccv: {
				digits: true,
				required: true
			}
		}
	});
{% endset %}

{% includeJsFile '/assets/static/validate/jquery.validate.min.js' %}
{% includeJs formJs %}



{% endblock %}
