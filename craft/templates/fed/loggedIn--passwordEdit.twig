{% extends "_layouts/standard" %}

{% block content %}

{# Breadcrumbs #}
{% include '_components/fed/nav--breadcrumbs'  %}

{# Container #}
<div class="simple-container">
	
	{# Logged In Menu #}
	{% include '_components/fed/nav--logged-in' %}

	{# Form #}
	<section class="form-container --narrow m-auto md:w-3/4 lg:w-1/2 mb-12 sm:mb-lg ">
		
		<form action="#" class="py-4">
			
			{# Field #}
			<div class="form-row mb-6">
				<label for="currentPw" class="field-label block w-full">Current Password</label>
				<input required name="currentPw" id="currentPw" type="password" class="input-field block w-full" >
			</div>
			

			{# Field / split #}
			<div class="form-row mb-6 flex justify-center items-center -mx-4">

				<div class="w-1/2 px-4">
					<label for="newPw" class="field-label block w-full">New Password</label>
					<input required type="newPw" name="newPw" id="newPw" class="input-field block w-full">
				</div>

				<div class="w-1/2 px-4">
					<label for="confirmPw" class="field-label block w-full">Retype Password</label>
					<input required type="confirmPw" name="confirmPw" id="confirmPw" class="input-field block w-full">
				</div>
			</div>



			{# Buttons #}
			<div class="form-row mb-6 pt-6 flex items-center">
					 <input class="submit btn" type="submit" value="Update">
					<a href="#" class="ml-6 px-3 text-sm no-underline text-grey-dark hover:text-green block">Cancel</a>
			</div>



		</form>

	</section>

</div>

{# Form Validation #}
{% set formJs %}
	// Validate New Password + Confirmed Password Match
	$("form").validate({
		rules: {
	    confirmPw: {
	      equalTo: "#newPw"
	    }
	  }
	});
{% endset %}

{% includeJsFile '/assets/static/validate/jquery.validate.min.js' %}
{% includeJs formJs %}



{% endblock %}
